{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${mod_version}",

  "name": "${mod_name}",
  "description": "${mod_description}",
  "authors": [
    "Tfarecnim",
    "${author}"
  ],
  "contact": {
    "homepage": "https://modrinth.com/mod/${archives_base_name}",
    "sources": "https://gitlab.com/${author}/${mod_id}"
  },

  "license": "https://gitlab.com/${author}/${mod_id}/-/blob/master/LICENSE",
  "icon": "assets/${mod_id}/${mod_id}_icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "${maven_group}.${mod_id}.${ModId}\$Init"
    ],
    "client": [
      "${maven_group}.${mod_id}.${ModId}\$ClientInit"
    ],
    "modmenu": [
      "${maven_group}.${mod_id}.ModMenuIntegration"
    ]
  },
  "mixins": [
    "${mod_id}.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=${min_loader_version}",
    "fabric": ">=${min_fabric_api_version}",
    "minecraft": ">=${min_minecraft_version} <=${minecraft_version}"
  },
  "suggests": {
    "modmenu": ">=${min_modmenu_version}",
    "cloth-config": ">=${min_cloth_config_version}"
  }
}